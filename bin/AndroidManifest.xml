<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hxy.filebrowser"
    android:versionCode="2"
    android:versionName="2.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.hxy.filebrowser.FileBrowserActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.hxy.filebrowser.GetFileTreeActivity"/>  
    </application>
	<use-permissing android:name="android.permissing.WRITE_EXTERNAL_STORAGE"/>
	<use-permissing android:name="android.permissing.READ_EXTERNAL_STORAGE"/>
</manifest>
